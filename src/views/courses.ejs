<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Courses</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h2>Courses</h2>
    <ul class="list-group">
      <% courses.forEach(course => { %>
        <li class="list-group-item">
          <h3><%= course.name %></h3>
          <p>Code: <%= course.code %></p>
          <p>Capacity: <%= course.capacity %></p>
          <p>Enrolled: <%= course.enrolledStudents.length %></p>
          <button class="btn btn-success btn-sm" onclick="addCourse('<%= course.name %>')">Add</button>
          <button class="btn btn-danger btn-sm" onclick="removeCourse('<%= course.name %>')">Remove</button>
        </li>
      <% }) %>
    </ul>
  </div>
  <script>
    function addCourse(courseName) {
      // Add course logic here
      alert('Course added: ' + courseName);
    }

    function removeCourse(courseName) {
      // Remove course logic here
      alert('Course removed: ' + courseName);
    }
  </script>
</body>
</html>